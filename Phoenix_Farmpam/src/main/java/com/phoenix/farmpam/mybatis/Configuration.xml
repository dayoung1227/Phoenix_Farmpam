<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 자주 사용하는 type 의 별칭을 등록 해 놓고  Mapper xml 에서 사용할수 있다. -->
	<typeAliases>
		<typeAlias type="com.phoenix.farmpam.board.dto.LikesDto" alias="likesDto"/>
		<typeAlias type="com.phoenix.farmpam.board.dto.BoardDto" alias="boardDto"/>
		<typeAlias type="com.phoenix.farmpam.board.dto.BoardCommentsDto" alias="boardCommentsDto"/>
		<typeAlias type="com.phoenix.farmpam.item.dto.ItemCategoryTopDto" alias="itemCategoryTopDto"/>
		<typeAlias type="com.phoenix.farmpam.item.dto.ItemCategoryLowDto" alias="itemCategoryLowDto"/>
		<typeAlias type="com.phoenix.farmpam.users.dto.UsersDto" alias="usersDto"/>
		<typeAlias type="com.phoenix.farmpam.farmer.dto.FarmerDto" alias="farmerDto"/>
		<typeAlias type="com.phoenix.farmpam.farmer.dto.FollowDto" alias="followDto"/>
		<typeAlias type="com.phoenix.farmpam.item.dto.ItemDto" alias="itemDto"/>
		<typeAlias type="com.phoenix.farmpam.item.dto.OrdersDto" alias="ordersDto"/>
		<typeAlias type="com.phoenix.farmpam.item.dto.CartDto" alias="cartDto"/>
	</typeAliases>
	<!-- 필요한 Mapper xml 등록하기  -->
	<mappers>
		<mapper resource="com/phoenix/farmpam/mybatis/BoardMapper.xml"/>
		<mapper resource="com/phoenix/farmpam/mybatis/BoardCommentsMapper.xml"/>
		<mapper resource="com/phoenix/farmpam/mybatis/LikesMapper.xml"></mapper>
		<mapper resource="com/phoenix/farmpam/mybatis/UsersMapper.xml"/>
		<mapper resource="com/phoenix/farmpam/mybatis/FarmerMapper.xml"/>
		<mapper resource="com/phoenix/farmpam/mybatis/FollowMapper.xml"/>
		<mapper resource="com/phoenix/farmpam/mybatis/ItemMapper.xml"/>
		<mapper resource="com/phoenix/farmpam/mybatis/CartMapper.xml"/>
	</mappers>
</configuration>